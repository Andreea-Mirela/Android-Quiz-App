<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdActivity"
    android:background="@drawable/gradient_background2"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/stanciu_andreea_third_ll1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        android:gravity="center">

        <TextView
            android:id="@+id/stanciu_andreea_third_tv_intrebare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textColor="@color/bottom_gradient"
            android:textSize="20sp"
            />

        <ImageView
            android:id="@+id/stanciu_andreea_third_iv"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/int1"/>

        <LinearLayout
            android:id="@+id/stanciu_andreea_third_ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <ProgressBar
                android:id="@+id/stanciu_andreea_third_pb"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="5"
                android:minHeight="50dp"
                android:progress="0"
                android:indeterminate="false"
                />

            <TextView
                android:id="@+id/stanciu_andreea_third_tv_pb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:textColorHint="#7A8089"
                android:textSize="14sp"
                android:text="@string/_0_10"/>

        </LinearLayout>

        <TextView
            android:id="@+id/stanciu_andreea_third_tv_cat1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/custom_tv_cat"
            android:gravity="center"
            android:padding="13dp"
            android:textColor="#7A8089"
            android:textSize="12sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/stanciu_andreea_third_tv_cat2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/custom_tv_cat"
            android:gravity="center"
            android:padding="13dp"
            android:textColor="#7A8089"
            android:textSize="12sp"
            android:textStyle="bold"
            />

        <TextView
        android:id="@+id/stanciu_andreea_third_tv_cat3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/custom_tv_cat"
        android:gravity="center"
        android:padding="13dp"
        android:textColor="#7A8089"
        android:textSize="12sp"
        android:textStyle="bold"
        />

        <Button
            android:id="@+id/stanciu_andreea_third_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/top_gradient"
            android:text="@string/trimite"
            android:textColor="@color/bottom_gradient"
            android:textSize="18sp"
            android:textStyle="bold"/>

    </LinearLayout>

</ScrollView>